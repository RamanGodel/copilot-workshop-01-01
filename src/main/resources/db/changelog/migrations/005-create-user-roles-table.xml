<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-user-roles-table" author="system">
        <comment>Create user_roles join table for many-to-many relationship</comment>

        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                            foreignKeyName="fk_user_roles_user"
                            references="users(id)"
                            deleteCascade="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"
                            foreignKeyName="fk_user_roles_role"
                            references="role(id)"
                            deleteCascade="true"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="user_roles"
                      columnNames="user_id,role_id"
                      constraintName="pk_user_roles"/>

        <rollback>
            <dropTable tableName="user_roles"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

