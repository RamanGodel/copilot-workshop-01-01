<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-exchange-rate-table" author="system">
        <comment>Create exchange_rate table to store currency exchange rates</comment>

        <createTable tableName="exchange_rate">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_exchange_rate"/>
            </column>
            <column name="base_currency_id" type="BIGINT">
                <constraints nullable="false"
                            foreignKeyName="fk_exchange_rate_base_currency"
                            references="currency(id)"
                            deleteCascade="false"/>
            </column>
            <column name="target_currency_id" type="BIGINT">
                <constraints nullable="false"
                            foreignKeyName="fk_exchange_rate_target_currency"
                            references="currency(id)"
                            deleteCascade="false"/>
            </column>
            <column name="rate" type="DECIMAL(19,6)">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="exchange_rate"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

